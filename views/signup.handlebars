<div class="card mx-auto w-50">
  <div class="card-header text-white">
    <h3>Sign Up</h3>
  </div>
  <div class="card-body mx-auto">
    <blockquote class="blockquote mb-0">
      <form class="login-form form-inline">
        <div class="container">
          <div class="row">
            <div class="col-12">
            <label for="username-login">Username:</label>
            <input type="text" id="username-login"  placeholder="Enter username" />
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <label for="password-login">Password:</label>
              <input type="password" id="password-login"  placeholder="Enter password" />
            </div>
          </div>
          <div class="mx-auto">
            <button type="button" class="btn btn-lg signup-btn">Sign Up!</button>
          </div>
          <div class="mx-auto">
           <a class="badge badge-link text-white" href="/login">Login Instead!</a>
          </div>
        </div>
      </form>
    </blockquote>
  </div>
</div>