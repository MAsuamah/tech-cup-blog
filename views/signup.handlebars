<div class="card mx-auto w-50">
  <div class="card-header text-white">
    <h3>Sign Up</h3>
  </div>
  <div class="card-body mx-auto">
    <blockquote class="blockquote mb-0">
      <form class="signup-form form-inline">
        <div class="container">
          <div class="row">
            <div class="col-12">
            <label for="username-signup">Username:</label>
            <input type="text" id="username-signup"  placeholder="Enter username" />
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <label for="password-signup">Password:</label>
              <input type="password" id="password-signup"  placeholder="Enter password" />
            </div>
          </div>
          <div class="mx-auto">
            <button type="submit" class="btn btn-lg signup-btn">Sign Up</button>
          </div>
          <div class="mx-auto">
           <a class="badge badge-link text-white" href="/login">Login Instead</a>
          </div>
        </div>
      </form>
    </blockquote>
  </div>
</div>

<script src="/javascript/signup.js"></script>